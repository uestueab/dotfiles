split()
{
for pdf in $FILE; do ##for every file
  echo -n checking $pdf

for i in $(pdfgrep -n --password=$pw "$STRING" $pdf | cut -f1 -d ":" | uniq); do
  pdftk "$pdf" input_pw $pw  cat $i output "${pdf}_page_${i}.pdf" 
   done
   echo ' Done'
done
}

split
pdftk *_page_*.pdf cat output "$STRING.pdf" 

