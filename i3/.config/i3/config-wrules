# VIM-LIKE BINDINGS
set $Left   h
set $Down   j
set $Up     k
set $Right  l

# set monitors
set $x220t LVDS1
set $primary LVDS1
set $secondary VGA1

# modifiers
set $mod                        Mod1 
set $win                        Mod4
floating_modifier               $mod

bindsym $mod+Return             exec alacritty
bindsym $mod+d [con_id="__focused__" title="^(?!VIM).*$" class="^(?!mpv).*$"]   kill
# ----------------
# I3 CONFIGURATION
# ----------------
bindsym $mod+Shift+r restart
# bindsym $mod+Shift+r reload

# ----------------
